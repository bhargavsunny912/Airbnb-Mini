<% layout("/layouts/boilerplate") %>
<body>
    <h3 class="edit text-danger mt-4">Edit Listing</h3>
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/listing/<%= listing._id %>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

                <div>
                    <input type="text"  name="title" value="<%= listing.title %>" class="form-control mt-3" required>
                    <div class="invalid-feedback mx-3">Please enter a valid title</div>
                </div>

                <div>
                    <textarea name="description" rows="5" cols="20" class="form-control mt-3" required><%= listing.description %></textarea>
                    <div class="invalid-feedback mx-3">Please enter a breif about title</div>
                </div>

                <div>
                    <label class="form-label mt-3" for="img">Previous image file</label><br>
                    <img src="<%= listing.image.url %>" alt="listingimage" id="img" height="200vh" width="200vh" class="mt-3">
                </div>

                <div>
                    <label class="form-label mt-3" for="img">Upload new image file</label>
                    <input type="file" name="file" id="img" value="<%= listing.image %>" class="form-control mt-3">
                    <div class="invalid-feedback mx-3">Upload new image file</div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <input type="number" required name="price" value="<%= listing.price %>" class="form-control mt-3">
                        <div class="invalid-feedback mx-3">Please enter a valid price</div>
                    </div>
                    <div class="col-md-8">
                        <input type="text" required name="country" value="<%= listing.country %>" class="form-control mt-3">
                        <div class="invalid-feedback mx-3">Please enter a valid Country</div>
                    </div>
                </div>

                <div>
                    <input type="text" required name="location" value="<%= listing.location %>" class="form-control mt-3">
                    <div class="invalid-feedback mx-3">Please enter a valid Location</div>
                </div>

                <div class="text-center"><button class="btn btn-danger m-3">Edit Post</button></div>
            </form> 
        </div>
    </div>
</body>
